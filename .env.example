# Smart Director v2 — Environment Configuration
# Copy this file to .env and fill in your values.

# ── DashScope API ──
DASHSCOPE_API_KEY=sk-your-key-here

# ── LLM (Qwen) ──
QWEN_MODEL=qwen-max
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
ENABLE_THINKING=true

# ── Image Generation ──
IMAGE_MODEL=wanx2.1-t2i-turbo
IMAGE_ENDPOINT=https://dashscope.aliyuncs.com/api/v1/services/aigc/text2image/image-synthesis

# ── Video Generation ──
VIDEO_T2V_MODEL=wanx2.1-t2v-turbo
VIDEO_I2V_MODEL=wanx2.1-i2v-turbo
VIDEO_ENDPOINT=https://dashscope.aliyuncs.com/api/v1/services/aigc/text2video/video-synthesis

# ── Task Polling ──
AIGC_BASE_URL=https://dashscope.aliyuncs.com
TASK_ENDPOINT=/api/v1/tasks/{task_id}
POLL_INTERVAL_SEC=5
REQUEST_TIMEOUT_SEC=30
